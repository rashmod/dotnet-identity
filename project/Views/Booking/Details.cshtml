@model project.Models.Booking

@{
    ViewData["Title"] = "Booking Details";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="bi bi-info-circle"></i> Booking Details</h3>
        </div>
        <div class="card-body p-4">
            <h5 class="mb-3 text-muted">Booking Information</h5>

            <div class="row mb-3">
                <div class="col-sm-3 fw-bold">Start Date:</div>
                <div class="col-sm-9">@Model.StartDate.ToString("yyyy-MM-dd")</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-3 fw-bold">End Date:</div>
                <div class="col-sm-9">@Model.EndDate.ToString("yyyy-MM-dd")</div>
            </div>
            <div class="row mb-4">
                <div class="col-sm-3 fw-bold">User:</div>
                <div class="col-sm-9">@Model.User?.UserName</div>
            </div>

            @if (Model.Vehicle != null)
            {
                <h5 class="mb-3 text-muted">Vehicle Details</h5>

                <div class="row mb-3">
                    <div class="col-sm-3 fw-bold">Brand:</div>
                    <div class="col-sm-9">@Model.Vehicle.Brand</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3 fw-bold">Model:</div>
                    <div class="col-sm-9">@Model.Vehicle.Model</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3 fw-bold">Rental Price Per Day:</div>
                    <div class="col-sm-9">$@Model.Vehicle.RentalPricePerDay</div>
                </div>
                <div class="row mb-4">
                    <div class="col-sm-3 fw-bold">Availability:</div>
                    <div class="col-sm-9">
                        @if (Model.Vehicle.IsAvailable)
                        {
                            <span class="badge bg-success">Available</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Not Available</span>
                        }
                    </div>
                </div>
            }
        </div>

        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>

            <form asp-action="Delete" asp-route-id="@Model.BookingId" method="post">
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete Booking
                </button>
            </form>
        </div>
    </div>
</div>