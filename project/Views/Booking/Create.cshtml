@model project.Models.Booking

@{
    ViewData["Title"] = "Create Booking";
    var today = DateTime.Now.ToString("yyyy-MM-dd"); // Get today's date in YYYY-MM-DD format
}

<div class="container mt-4">
    <h2 class="mb-3">@ViewData["Title"]</h2>

    <div class="card shadow-lg border-0 rounded">
        <div class="card-body p-4">
            <h5 class="mb-3">Vehicle Details</h5>
            <p><strong>Brand:</strong> @Model.Vehicle.Brand</p>
            <p><strong>Model:</strong> @Model.Vehicle.Model</p>

            <hr />

            <form asp-action="Create">
                <input type="hidden" asp-for="VehicleId" /> <!-- Retain Vehicle ID -->

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="StartDate" class="form-label"></label>
                    <input asp-for="StartDate" type="date" class="form-control" value="@today" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="EndDate" class="form-label"></label>
                    <input asp-for="EndDate" type="date" class="form-control" value="@today" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-success"><i class="bi bi-check-circle"></i> Confirm Booking</button>
                    <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}