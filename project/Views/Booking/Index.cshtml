@model IEnumerable<project.Models.Booking>

@{
    ViewData["Title"] = "Bookings";
}

<div class="container mt-4">
    <h2 class="mb-3">@ViewData["Title"]</h2>

    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark text-center">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.StartDate)</th>
                    <th>@Html.DisplayNameFor(model => model.EndDate)</th>
                    <th>User</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.StartDate.ToString("dd MMM yyyy")</td>
                        <td>@item.EndDate.ToString("dd MMM yyyy")</td>
                        <td>@item.User</td>
                        <td class="text-center">
                            @* Uncomment if you want to allow editing *@
                            @* <a asp-action="Edit" asp-route-id="@item.BookingId" class="btn btn-warning btn-sm"><i class="bi bi-pencil-square"></i> Edit</a> *@
                            <a asp-action="Details" asp-route-id="@item.BookingId" class="btn btn-primary btn-sm"><i class="bi bi-eye"></i> Details</a>
                            <a asp-action="Delete" asp-route-id="@item.BookingId" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>